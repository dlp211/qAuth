<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="qauth.djd.dummyclient.GpaActivity">

    <TextView android:id="@+id/gpaTextView" android:text="balance: ..." android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Withdrawal"
        android:id="@+id/withdrawal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:onClick="withdrawal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deposit"
        android:id="@+id/deposit"
        android:layout_alignTop="@+id/withdrawal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="deposit" />

</RelativeLayout>
